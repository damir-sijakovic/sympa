function sympa_initItemList(){
    
    const _formatEuroPrice = function(amount) {
        return amount.toFixed(2).replace('.', ',');
    }
    
    const _createItem = function(object){
        
        const id = object.sku;
        const image = object.image;
        const price = _formatEuroPrice(object.price);
        const title = object.title;
        const quantity = object.quantity;
        
        return `
            <li class="list-group-item d-flex justify-content-between lh-sm">
                <div class="d-flex align-items-center">
                
                    <img onclick="window.open('/product-id/${id}', '_blank');" style="height:64px; width:64px;" src="${image}" />
                <div>
                    <h6 class="my-0">${title}</h6>
                    <small class="text-body-secondary">Quantity: <span class="badge text-bg-secondary">x${quantity}</span></small>
                </div>
                
            </div>
                <span class="text-body-secondary">${price} €</span>
            </li>
        `;
    }
    
    const dsCartData = localStorage.getItem("dsCartData");
    
    if (dsCartData){   
        const t = JSON.parse(dsCartData);
        const sessionKeys = Object.keys(t);        
          
        const targetElement = document.getElementById("sympa-item-list");
        targetElement.innerHTML = "";
        
        let allAmount = 0;
        let count = 0;
        for (let i = 0; i < sessionKeys.length; i++) {
            const currentKeyObj = t[sessionKeys[i]];
            allAmount += currentKeyObj.price * currentKeyObj.quantity;
            targetElement.innerHTML += _createItem(currentKeyObj);
            count++;
        }        

        document.getElementById("sympa-number-of-items").innerHTML = count;
        
        const totalPrice = _formatEuroPrice(allAmount);
                
        targetElement.innerHTML += `<li class="list-group-item d-flex justify-content-between">
            <span>Total:</span>
            <strong>${totalPrice} €</strong>
            </li>`; 
    }

}


window.addEventListener("load", function(){			
    initDsCart();
    sympa_initItemList();
});
        
</script>
